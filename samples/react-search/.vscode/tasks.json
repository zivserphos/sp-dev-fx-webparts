{
  // See http://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "command": "gulp",
  "args": [
    "--no-color"
  ],
  "tasks": [
    {
      "label": "bundle",
      "type": "gulp",
      "task": "--no-color",
      "problemMatcher": [
        "$tsc"
      ],
      "group": {
        "_id": "build",
        "isDefault": false
      }
    },
    {
      "label": "test",
      "type": "gulp",
      "task": "--no-color",
      "problemMatcher": [
        "$tsc"
      ],
      "group": {
        "_id": "test",
        "isDefault": false
      }
    },
    {
      "label": "serve",
      "type": "gulp",
      "task": "--no-color",
      "isBackground": true,
      "problemMatcher": [
        "$tsc"
      ]
    }
  ]
}
